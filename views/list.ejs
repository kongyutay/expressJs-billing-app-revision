<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>记账本</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body class="bg-gray-100">
    <div class="flex justify-center items-center h-screen">
        <div class="bg-white p-10 rounded shadow-lg w-full max-w-2xl">
            <div class="flex justify-end">
                <form method="post" action="/logout">

                    <button class="bg-red-500 text-white px-4 py-2 rounded">退出</button>
                </form>
            </div>
            <h1 class="text-2xl font-bold mb-6 text-center">记账本</h1>
            
            
            <h2><a href="/account/create">添加账单</a></h2>
            <div class="space-y-4">
                <div class="bg-red-100 p-4 rounded">
                    <div class="flex justify-between">
                        <span class="text-sm text-gray-500">2024-07-08</span>
                        项目
                        <span class="bg-yellow-400 text-white text-sm px-2 py-1 rounded">支出</span>
                        <span class="text-sm text-gray-700">100 元</span>
                    </div>
                    <div class="mt-2 text-gray-700">
                        买香蕉
                    </div>
                    <a class="delBtn" href="/account/123">
                        <span class="remove">remove</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script>
        let delBtns = document.querySelectorAll('.delBtn')
        delBtns.forEach(item => {
            item.addEventListener('click', function(e){
                if(confirm('Are you sure you want to delete this record?')){
                    return true
                } else {
                    e.prevenDefault();
                }
            })
        })
    </script>
</body>
</html>
